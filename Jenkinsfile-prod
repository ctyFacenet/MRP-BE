pipeline {
    agent {label "MRP_XPRD"}

    environment {
        SPRING_PROFILES_ACTIVE = 'prod'
    }

    stages{
        stage("Check old image") {
            steps {
                sh 'docker rm -f mrp-be-xp|| echo "this container does not exist" '
                sh 'docker image rm -f mrp-be-xp || echo "this image dose not exist" '
            }
        }
        stage('Clean') {
            steps {
                sh 'chmod +x mvnw'
                sh "./mvnw -ntp clean -P-webapp"
            }
        }
        stage('Validate') {
            steps {
                sh 'chmod +x mvnw'
                sh "./mvnw -ntp validate"
            }
        }
        stage('Packaging') {
            steps {
                sh "./mvnw -ntp verify -P-webapp -Dmaven.test.skip -Dcheckstyle.skip"
            }
        }
        stage('Build and Run') {
            steps {
                sh 'docker compose -f docker-compose-prod.yml up -d --build'
            }
        }
    }
}
